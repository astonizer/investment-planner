<%- include('partials/header.ejs') %>

<h1 class="my-5">Get portfolios designed specifically as per your needs</h1>

<form>
    <div class="form-group">
        <label for="inputMoney">Enter the amount of money you wish to invest</label>
        <input type="number" class="form-control" id="inputMoney" aria-describedby="moneyHelp" min="1000" value="1000">
        <small id="moneyHelp" class="form-text text-muted">Minimum amount is 1000 INR</small>
    </div>
    <div class="container">
        <% data.map((asset, id) => { %>
            <% if(id%4 === 0) { %>
                </div>
                <div class="row bg-dark text-light">
            <% } %>
                <div class="col m-4">
                    <div class="form-check">
                        <input type="checkbox" name="<%= asset %>" class="form-check-input" id="exampleCheck<%= id %>">
                        <label class="form-check-label" for="exampleCheck<%= id %>"><%= asset %></label>
                    </div>
                </div>
        <% }) %>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-info btn-lg justify-content-center my-5 px-4">Optimize</button>
    </div>
</form>
<%- include('partials/footer.ejs') %>