<%- include('partials/header.ejs') %>
</div>
<table class="table table-bordered table-dark my-5 text-center">
    <% if(data.length > 0) { %>
        <thead class="my-5 h1">
            <th scope="col">Sr no.</th>
            <th scope="col">Symbol</th>
            <th scope="col">Name</th>
            <th scope="col">Price(INR)</th>
            <th scope="col">Quantity</th>
        </thead>
        <tbody>
        <% data.map((asset, id) => { %>
            <tr class="my-3 h3">
                <th scope="row"><%= id+1 %></th>
                <td><%= asset.Symbol %></td>
                <td><%= asset.Name %></td>
                <td><%= asset.Price %></td>
                <td>
                    <form method="POST" action="/cap/small" id="<%= asset.Symbol %>" class="my-1">
                        <div class="form-row align-items-center justify-content-center">
                            <div class="col-auto">
                                <input type="number" name="quantity" class="form-control asset-value" placeholder="Quantity" min="1">
                            </div>
                            <input type="hidden" class="hidden_symbol" name="asset" value="<%= asset.Symbol %>"></input>
                            <input type="hidden" class="hidden_symbol" name="price" value="<%= asset.Price %>"></input>
                            <div class="col-auto">
                                <button class="btn btn-primary">Buy</button>
                            </div>
                        </div>
                    </form>
                </td>
            </tr>
        <% }) %>
        </tbody>
    <% } else {%>
        <div class="h3">
            There was some error fetching the data. Try again.
        </div>
    <% } %>
</table>
<div>
<%- include('partials/footer.ejs') %>